            <Image HorizontalAlignment="Left" Height="52" Margin="70,204,0,0" VerticalAlignment="Top" Width="43" Source="/rb_5539.png"/>
            <CheckBox x:Name="cola" Content="Cola" HorizontalAlignment="Left" Margin="134,183,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>
            <Image HorizontalAlignment="Left" Height="47" Margin="168,163,0,0" VerticalAlignment="Top" Width="40" Source="/rb_20924.png"/>
            <CheckBox x:Name="fries" Content="Fries" HorizontalAlignment="Left" Margin="128,221,0,0" VerticalAlignment="Top" BorderBrush="White" Foreground="White" FontWeight="Bold" Checked="CheckBox_Checked"/>
            <Image HorizontalAlignment="Left" Height="44" Margin="173,206,0,0" VerticalAlignment="Top" Width="41" Source="/rb_2149484229.png"/>
            <CheckBox x:Name="ice" Content=" Ice Cream" HorizontalAlignment="Left" Margin="193,0,0,0" VerticalAlignment="Center" Foreground="White" FontWeight="Bold"/>

