            <Grid Margin="1,364,3,47" Background="White"/>
            <Image HorizontalAlignment="Left" Height="100" Margin="184,203,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.25"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image HorizontalAlignment="Left" Height="57" Margin="81,160,0,0" VerticalAlignment="Top" Width="75" Source="/rb_9599.png"/>
        </Grid>
        <DataGrid x:Name="datagrid3" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="305,0,-1,163" SelectionChanged="DataGrid_SelectionChanged_3"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="40,-65,0,0" VerticalAlignment="Top"/>
        <Image HorizontalAlignment="Left" Height="87" Margin="395,405,0,0" VerticalAlignment="Top" Width="75" Source="/rb_5539.png"/>
        <Image HorizontalAlignment="Left" Height="71" Margin="589,415,0,0" VerticalAlignment="Top" Width="68" Source="/rb_2149484229.png"/>
        <Image HorizontalAlignment="Left" Height="79" Margin="547,335,0,0" VerticalAlignment="Top" Width="77" Source="/rb_20924.png"/>
        <Image HorizontalAlignment="Left" Height="46" Margin="632,377,0,0" VerticalAlignment="Top" Width="58" Source="/ice-cream_6191542.png"/>
        <Image HorizontalAlignment="Left" Height="89" Margin="368,333,0,0" VerticalAlignment="Top" Width="148" Source="/rb_9599.png"/>

        <Grid Margin="309,330,0,0">
            <Label Content="Tea      8 EGP" HorizontalAlignment="Left" Margin="6,40,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label Content="Burger    70 EGP" HorizontalAlignment="Left" Margin="2,107,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label Content="Cola    10 EGP" HorizontalAlignment="Left" Margin="173,41,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label Content="&#xA;&#xA;Frach Fries   12 EGP" HorizontalAlignment="Left" Margin="162,76,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label Content="ice cream   20 EGP" HorizontalAlignment="Left" Margin="341,82,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        </Grid>
        <Ellipse HorizontalAlignment="Left" Height="82" Margin="723,332,0,0" Stroke="Black" VerticalAlignment="Top" Width="143" RenderTransformOrigin="0.517,0.683" Fill="#FF400000"/>
        <Label Content="Menu" HorizontalAlignment="Left" Margin="746,361,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="White" RenderTransformOrigin="0.557,0.361"/>
    </Grid>

</Window>
