            <Label Content="Dlivery Name" HorizontalAlignment="Left" Margin="15,96,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" FontSize="14"/>
            <TextBox x:Name="Id_Dlivery" HorizontalAlignment="Left" Margin="136,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label Content="ID Dlivery" HorizontalAlignment="Left" Margin="14,141,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" FontSize="14"/>
            <RadioButton x:Name="cach" Content="Cach" HorizontalAlignment="Left" Margin="119,287,0,0" VerticalAlignment="Top" Background="White" Foreground="White" FontWeight="Bold"/>
            <RadioButton x:Name="visa" Content="Visa" HorizontalAlignment="Left" Margin="237,287,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>
            <RadioButton x:Name="Wallet" Content="Wallet" HorizontalAlignment="Left" Margin="170,287,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked" Foreground="White" FontWeight="Bold"/>
            <Label Content="Payment With:" HorizontalAlignment="Left" Margin="8,280,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>
            <CheckBox x:Name="teas" Content="Tea" HorizontalAlignment="Left" Margin="58,183,0,0" VerticalAlignment="Top" BorderBrush="White" Foreground="White" FontWeight="Bold"/>
            <CheckBox x:Name="coco" Content="Burger" HorizontalAlignment="Left" Margin="16,222,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>
            <Label Content="Items :" HorizontalAlignment="Left" Margin="8,177,0,0" VerticalAlignment="Top" Background="#FF400000" Foreground="White" FontWeight="Bold"/>
