        mc:Ignorable="d"
        Title="Add Order" Height="509" Width="800">
    <Grid>
        <Grid Margin="0,0,494,0" Background="#FF400000">
            <Grid.RowDefinitions>
                <RowDefinition Height="415*"/>
                <RowDefinition Height="78*"/>
